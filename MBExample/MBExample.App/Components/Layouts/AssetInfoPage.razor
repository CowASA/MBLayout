@using MBExample.App.Components.DataDisplay

<MudContainer>
@if (AccountId == null || AccountId == "")
	{
		<MudContainer Class="mt-16" MaxWidth="MaxWidth.False">
			<MudGrid Spacing="4">
				<MudItem>
					<WaitingForEntry />
				</MudItem>
			</MudGrid>
		</MudContainer>
	}
	else
	{
	@if (_isBusy)
	{
		<MudSkeleton />
		<MudSkeleton SkeletonType="SkeletonType.Circle" Width="50px" Height="50px" />
		<MudSkeleton SkeletonType="SkeletonType.Rectangle" Width="200px" Height="110px" />
	}
	else
	{
		<MudGrid Spacing="2">
			<MudItem xs="12" sm="6" md="4">
				@if (_isBusy)
				{
					<MudCard draggable="true" Elevation="2" Outlined="true" Height="300px" Width="300px" Class="d-flex justify-center align-center">
						<MudCardContent>
							<MudText Color=Color.Warning>Calculating...</MudText>
						</MudCardContent>
					</MudCard>
				}
				else
				{
					<MudCard draggable="true" Elevation="2" Outlined="true" Height="300px" Width="300px" Class="d-flex justify-center align-center">
						<MudCardContent>
							<MudText Color=Color.Success>@AssetCount</MudText>
						</MudCardContent>
					</MudCard>
				}
			</MudItem>
			<MudItem>
				@if (_isBusy)
				{
					<MudCard draggable="true" Elevation="2" Outlined="true" Height="300px" Width="300px" Class="d-flex justify-center align-center">
						<MudCardContent>
							<MudText Color=Color.Warning>Calculating assets...</MudText>
						</MudCardContent>
					</MudCard>
				}
				else
				{
					<MudCard draggable="true" Elevation="2" Outlined="true" Height="300px" Width="300px" Class="d-flex justify-center align-center">
						<MudCardContent>
							@*Get verified information from TinyChart API*@
						</MudCardContent>
					</MudCard>
				}
			</MudItem>
			<MudItem>
				<MudGrid Spacing="2">
					<MudItem xs="12">
						<MudPaper draggable="true" Elevation="2" Height="300px" Width="300px">
							<MudText Color=Color.Success>Box 3</MudText>
						</MudPaper>
					</MudItem>
					<MudItem xs="12">
						<MudPaper Elevation="2" Height="300px" Width="300px">
							<MudText Color=Color.Success>Box 4</MudText>
						</MudPaper>
					</MudItem>
				</MudGrid>
			</MudItem>
			<MudItem>
				<MudCard Elevation="2" Outlined="true" Class="d-flex oi-justify-center align-center">
					<AssetsTable Assets="_walletAssets"/>
				</MudCard>
			</MudItem>
		</MudGrid>	
	}
}
</MudContainer>	

<MudThemeProvider />