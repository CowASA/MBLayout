@page "/wallet"
@page "/wallet/{AccountId}"

<EditForm Model="_account" OnValidSubmit="FetchWalletInfoAsync">

@*Container for wallet address text box*@
<MudContainer Class="mt-4" MaxWidth="MaxWidth.ExtraLarge">
	<MudGrid Spacing="2">
		<MudTextField Class="mr-4" T="string" Counter="58" MaxLength="58" HelperText="Algorand wallet addresses are 58 characters"
					  Immediate="true" Validation="@(new Func<string, IEnumerable<string>>(MaxCharacters))"
					  Label="@TextInputLabel" Variant="Variant.Outlined" Margin="Margin.Dense" @bind-Value="@AccountId" />
		<div class="col-10">
			<MudButton Class="mt-2" Variant="Variant.Filled" Size="Size.Small" OnClick="RedirectToAccountInfo">Submit</MudButton>
		</div>
	</MudGrid>
	<MudGrid Spacing="2">
		<MudItem>
			@if (_isBusy)
			{
				<MudCard draggable="true" Elevation="2" Outlined="true" Height="300px" Width="300px" Class="d-flex justify-center align-center">
					<MudCardContent>
						<MudText Class="font-size: 28px" Color=Color.Warning>Calculating...</MudText>
					</MudCardContent>
				</MudCard>
			}
			else
			{
				<MudCard draggable="true" Elevation="2" Outlined="true" Height="300px" Width="300px" Class="d-flex justify-center align-center">
					<MudCardContent>
						<MudText Color=Color.Success>@AssetCount</MudText>
					</MudCardContent>
				</MudCard>
@*				<MudPaper draggable="true" Elevation="2" Height="300px" Width="300px">
					<MudContainer Class="align-bottom" MaxWidth="MaxWidth.Medium">
						<MudText Color=Color.Success>@AssetCount</MudText>
					</MudContainer>
				</MudPaper>*@
			}

		</MudItem>
		<MudItem>
			<MudPaper Elevation="2" Height="300px" Width="300px">
				<MudText Color=Color.Success>Box 2</MudText>
			</MudPaper>
		</MudItem>
	</MudGrid>
	<MudGrid Spacing="2" Class="mt-2">
		<MudItem>
			<MudPaper draggable="true" Elevation="2" Height="300px" Width="300px">
				<MudText Color=Color.Success>Box 3</MudText>
			</MudPaper>
		</MudItem>
		<MudItem>
			<MudPaper Elevation="2" Height="300px" Width="300px">
				<MudText Color=Color.Success>Box 4</MudText>
			</MudPaper>
		</MudItem>
	</MudGrid>
</MudContainer>
</EditForm>

